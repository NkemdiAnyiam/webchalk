{
  "name": "webflik",
  "version": "0.7.0",
  "description": "Description of WebFlik will go here.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/index.mjs",
    "dist/index.d.mts"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "pack-up": "npm run build && npm pack",
    "in": "npm i && npm run pack-up",
    "out": "rm -rf ./dist ./node_modules",
    "in-and-out": "npm run in && npm run out",
    "open-docs": "bash -c \"start ./docs/index.html\"",
    "copy-doc-assets": "cp -r ./typedoc-config/assets/fonts ./docs/assets",
    "gen-docs": "cd ./typedoc-config && npx typedoc && cd .. && npm run copy-doc-assets && npm run open-docs",
    "lint": "tsc"
  },
  "keywords": [
    "webflik",
    "animation",
    "typescript"
  ],
  "author": "Nkemdi Anyiam",
  "license": "ISC",
  "devDependencies": {
    "tsup": "^8.0.1",
    "typedoc": "^0.26.5",
    "typedoc-material-theme": "^1.1.0",
    "typescript": "^5.5.3"
  }
}
